@model IEnumerable<Product>


<div id="carouselExample" class="carousel slide" data-ride="carousel" data-interval="3000" style="margin-top: 20px; margin-left:10%;">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/Slider1.webp" class="card-img-top rounded" alt="Slide 1" style="max-width: 90%; max-height: 300px; object-fit: contain;">
        </div>
        <div class="carousel-item">
            <img src="~/images/Slider2.webp" class="card-img-top rounded" alt="Slide 2" style="max-width: 90%; max-height: 300px; object-fit: contain;">
        </div>
        <div class="carousel-item">
            <img src="~/images/Slider3.webp" class="card-img-top rounded" alt="Slide 2" style="max-width: 90%; max-height: 300px; object-fit: contain;">
        </div>
        <div class="carousel-item">
            <img src="~/images/Slider4.webp" class="card-img-top rounded" alt="Slide 2" style="max-width: 90%; max-height: 300px; object-fit: contain;">
        </div>
    </div>
    <a class="carousel-control-prev custom-control" href="#carouselExample" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only"></span>
    </a>
    <a class="carousel-control-next custom-control" href="#carouselExample" role="button" data-slide="next" style="margin-right:100px">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only"></span>
    </a>
</div>


<hr class="my-4" style="height: 5px; background-color: #000;">

<div class="row pb-4">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6 product-card mb-4">
            <div class="card h-100 ">
                <img src="@product.ImageUrl" class="card-img-top rounded" style="height:200px ;object-fit:contain" />

                <div class="card-body">
                    <p class="card-title h5 text-dark opacity-10 text-uppercase text-center"> <em> <b>@product.Title</b></em></p>
                    <p class="card-title h5 text-info text-center">  by: <b>@product.Company </b></p>

                    <div class="pl-1">
                        <p class="text-dark text-opacity-20 text-uppercase text-center">
                            Price: <span style="text-decoration: line-through;">@product.ListPrice.ToString("c")</span>
                        </p>
                    </div>
                    <div class="pl-1">
                        <p class="text-dark text-opacity-75 text-uppercase text-center">
                            As low as: <span>@product.Price50.ToString("c")</span>
                        </p>
                    </div>

                    <div class="text-center">
                        <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-info bg-gradient border-0">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="/js//shared.js"></script>
