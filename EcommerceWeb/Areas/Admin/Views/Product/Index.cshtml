
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}


<div class="card shadow mt-4">

    <div class="card-header bg-dark ml-0 py-4">

        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
        </div>
        <div class="card-body p-4">
            <div class="row pt-4">

        <div class="col-6">
        </div>

        <div class="col-6 text-end" >
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary bg-success ">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>

    </div>

    <br /> <br />


<table class="table table-bordered table-striped" style = "width:100%"> 

    <thead>
        <tr>
            <th>
                Title
            </th>

            <th>
                Company
            </th>

            <th>
                Price
            </th>

            <th>
                Category
            </th>

            <th></th>
        </tr>

    </thead>

    <tbody>

                @foreach (var obj in Model)
                {
                <tr>
                    <td width ="25%">
                            @obj.Title
                    </td>

                    <td width ="25%">
                            @obj.Company
                    </td>

                     <td width ="25%">
                           @obj.ListPrice
                    </td>

                     <td width ="25%">
                          
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
                                    class="btn btn-primary mx-2 bg-info">
                                <i class="bi bi-pencil-square"></i> Edit 
                                </a>

                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                                    class="btn btn-danger mx-2">
                                        <i class="bi bi-trash3-fill"></i> Delete 
                                    </a>
                        </div>
                    </td>
                </tr>
                }

    </tbody>
</table>

        </div>
</div>


